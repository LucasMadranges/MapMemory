generator client {
  provider = "prisma-client-js"
  output   = "../../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_USERS")
}

model users {
  id        String @id @default(uuid())
  firstname String
  lastname  String
  email     String @unique
  password  String
}

model memory {
  id          String    @id @default(uuid())
  images      String[]
  title       String
  description String
  friends     friends[]
  place       String
  date        DateTime
}

model friends {
  id        String  @id @default(uuid())
  firstname String
  lastname  String
  memory    memory? @relation(fields: [memoryId], references: [id])
  memoryId  String?
}
